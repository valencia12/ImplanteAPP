<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:orientation="vertical"
                                                   android:id="@+id/main1"
                                                   tools:context=".MainActivity">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/shadow_text"
            android:textSize="@android:dimen/app_icon_size"
            android:text="@string/play_sounds"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/textView" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>


    <Button
            android:id="@+id/playSounds1"
            android:layout_width="177dp"
            android:layout_height="57dp"
            android:text="Nivel 1"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="130dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="130dp"

            android:shadowColor="@color/shadow_text"
            android:shadowRadius="10"
            android:shadowDx="2"
            android:shadowDy="5"
    />

    <Button
            android:id="@+id/playSounds2"
            android:layout_width="177dp"
            android:layout_height="57dp"
            android:text="Nivel 2"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="140dp" android:layout_marginRight="140dp"/>

    <Button
            android:id="@+id/playSounds3"
            android:layout_width="177dp"
            android:layout_height="57dp"
            android:text="Nivel 3"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/playSounds1"
            app:layout_constraintStart_toStartOf="@+id/playSounds1"
    />

    <Button
            android:id="@+id/playSounds4"
            android:layout_width="177dp"
            android:layout_height="57dp"
            android:text="Nivel 4"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/playSounds2"
            app:layout_constraintStart_toStartOf="@+id/playSounds2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"/>
    <Button
            android:id="@+id/dataPatient1"
            android:layout_width="177dp"
            android:layout_height="57dp"
            android:text="@string/Register"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/playSounds3"
            app:layout_constraintStart_toStartOf="@+id/playSounds3"
    />


</androidx.constraintlayout.widget.ConstraintLayout>