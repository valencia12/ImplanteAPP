<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activites.viewsAccounts.paciente.Expedient"
android:background="@color/colorAccent">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView" android:layout_marginTop="112dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="140dp" android:layout_marginStart="140dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.007"
            android:src="@drawable/avatar2"/>
    <TextView
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nombre"
            android:layout_weight="1"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="left"
            android:foregroundGravity="center"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <TextView
            android:id="@+id/tv_apellido"
            android:text="apellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="left"

            app:layout_constraintStart_toStartOf="@+id/tv_nombre"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/tv_nombre"
    />
    <TextView
            android:text="Edad"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="left"

            android:id="@+id/tv_edad" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_apellido"
            app:layout_constraintStart_toStartOf="@+id/tv_apellido"
    />
    <TextView
            android:text="Direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_direc"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="left"

            app:layout_constraintTop_toBottomOf="@+id/tv_edad" android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="@+id/tv_edad"
    />

</androidx.constraintlayout.widget.ConstraintLayout>